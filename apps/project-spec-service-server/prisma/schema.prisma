datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Category {
  id          String    @id @default(cuid())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  name        String?
  description String?
  projects    Project[]
}

model Project {
  id              String         @id @default(cuid())
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  title           String?
  description     String?
  techStack       String?
  url             String?
  tasks           Task[]
  category        Category?      @relation(fields: [categoryId], references: [id])
  categoryId      String?
  freelanceSite   FreelanceSite? @relation(fields: [freelanceSiteId], references: [id])
  freelanceSiteId String?
}

model FreelanceSite {
  id        String    @id @default(cuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  name      String?
  url       String?
  projects  Project[]
}

model Task {
  id          String          @id @default(cuid())
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  status      EnumTaskStatus?
  title       String?
  description String?
  project     Project?        @relation(fields: [projectId], references: [id])
  projectId   String?
}

enum EnumTaskStatus {
  Option1
}
